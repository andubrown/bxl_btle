# ios/Podfile

platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Enable frameworks and modular headers (needed for some Flutter plugins)
use_frameworks!
use_modular_headers!

target 'Runner' do
  # Flutter automatically manages pods, so no manual install calls
end

# Post-install adjustments for Flutter plugins
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
